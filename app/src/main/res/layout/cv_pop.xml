<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardCornerRadius="4dp"
        android:id="@+id/cardview_pop"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/cvP_imageview"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:contentDescription="Description of images"/>


            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/cvP_Aname_text"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="16sp"
                    android:gravity="top"/>

                <TextView
                    android:id="@+id/cvP_Tname_text"
                    android:textColor="@color/Blue_tab"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="13sp"
                    android:gravity="bottom"/>



            </android.support.v7.widget.LinearLayoutCompat>


            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/cvP_Tprice_text"
                    android:textColor="@color/Grey"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right"

                    android:textSize="13sp"/>


            </android.support.v7.widget.LinearLayoutCompat>




        </LinearLayout>






    </android.support.v7.widget.CardView>



</LinearLayout>